<%= form_for ([@usuario, @livro, @comentario]) do |f| %>
  <h1> Editar comentário </h1><br>
  <p>
    <%= f.label 'Titulo' %><br>
    <%= f.text_field :titulo %>
  </p>
  <p>
    <%= f.label 'Conteúdo' %><br>
    <%= f.text_area :conteudo %>
  </p>
  <p>
    <%= f.submit 'Enviar' %>
  </p>
<% end %>
